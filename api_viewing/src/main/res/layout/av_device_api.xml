<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/avDeviceApiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avDeviceName"
        android:textSize="16sp"
        android:textColor="?colorText"
        android:text="@string/av_main_device_api_api"/>

    <TextView
        android:id="@+id/avDeviceApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/avDeviceApiTitle"
        app:layout_constraintBottom_toBottomOf="@id/avDeviceApiTitle"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="?colorText"
        tools:text="30"/>

    <TextView
        android:id="@+id/avDeviceSdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avDeviceApi"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textSize="11sp"
        android:textColor="?colorTextSub"
        tools:text="Android 11"/>

    <TextView
        android:id="@+id/avDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="?colorText"
        tools:text="Google Pixel 2 XL"/>
</androidx.constraintlayout.widget.ConstraintLayout>